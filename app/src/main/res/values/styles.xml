<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainBlue</item>
        <item name="colorPrimaryDark">@color/colorMainBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        ......
    </style>

    <style name="FilePickerTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainBlue</item>
        <item name="colorPrimaryDark">@color/colorMainBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search_style" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shape">rectangle</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#00FF00</item>/>
        <item name="android:strokeColor">@color/colorLightGray</item>
        <item name="android:strokeWidth">4</item>
        <item name="android:radius">10dp</item>
    </style>
</resources>
