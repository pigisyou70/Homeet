<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SetReservation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorMainBlue"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/colorMainBlue"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="7dp">
        </LinearLayout>
        <TextView
            android:id="@+id/SelectDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="預約日"
            android:textColor="@color/white"
            android:textSize="32dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/colorMainBlue"
            android:orientation="horizontal"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:background="@color/colorMainYellow"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平日"
            android:textSize="32sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早上(07:00~12:00)"
                android:textSize="24dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/cb00"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中午(12:00~17:00)"
                android:textSize="24dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/cb01"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚上(17:00~22:00)"
                android:textSize="24dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/cb02"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorMainYellow"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="假日"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32sp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早上(07:00~12:00)"
                android:textSize="24dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/cb10"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中午(12:00~17:00)"
                android:textSize="24dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/cb11"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚上(17:00~22:00)"
                android:textSize="24dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/cb12"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_select2"
        android:textColor="@drawable/btn_textcolor"
        android:text="確定"
        android:id="@+id/SetFinish"/>
</LinearLayout>