<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="10dp"
    tools:context=".DetailActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/Favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_icon_favorite" />

                <TextView
                    android:id="@+id/Title_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/myphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ems="4"
                    android:text="租金"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Price_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FC1200"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RentInclude_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:dividerPadding="1dp"
                android:drawingCacheQuality="high"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/Detail_Pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"

                    android:text="格局"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Pattern_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Pings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"

                    android:text="坪數"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Size_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"

                    android:text="樓層"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Floor_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="型態"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Type_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="描述"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Discript_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Situation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="出租方式"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Status_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_RentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="最短租期"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/RentDate_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_MoveInDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="可遷入日"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/MoveInDate_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"

                    android:text="性別限制"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Gender_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"

                    android:text="地址"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Address_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Detail_UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Detail_PhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/Detail_Message"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_select2"
                    android:text="留言"
                    android:textColor="@drawable/btn_textcolor"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/Detail_Reservation"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_select2"
                    android:text="預約看屋"
                    android:textColor="@drawable/btn_textcolor"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/Detail_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="設備傢俱"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/tv" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"

                    android:text="電視"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/refrigerator" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:text="冰箱"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/air_conditioning" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:text="冷氣"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/washing_machine" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:text="洗衣機"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/natural_gas" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"

                    android:text="天然瓦斯"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/net" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:text="網路"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/the_fourth_station" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:text="第四台"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/water_heater" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:text="熱水器"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/table" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"

                    android:text="桌子"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/wardrobe" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:text="衣櫃"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/bed" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:text="床"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="30dp"
                    android:layout_height="24dp"

                    android:src="@mipmap/sofa" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    android:text="沙發"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>